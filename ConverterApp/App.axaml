<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ConverterApp.App"
             xmlns:local="using:ConverterApp"
             xmlns:converter="clr-namespace:ConverterApp.Converter"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
             
             <Application.Resources>
                    <SolidColorBrush x:Key="Dark" Color="#62676B"/>
                    <SolidColorBrush x:Key="Dark+1" Color="#A5A5A5" />
                    <SolidColorBrush x:Key="Medium" Color="#DBC9BB" />
                    <SolidColorBrush x:Key="Light-1" Color="#D9CDBD" />
                    <SolidColorBrush x:Key="Light" Color="#E5E3D6" />
                    <converter:FlagConverter x:Key="FlagConverter" />
             </Application.Resources>
             
             <Application.DataTemplates>
                    <local:ViewLocator/>
             </Application.DataTemplates>
             
             <Application.Styles>
                    <FluentTheme />
             </Application.Styles>
</Application>